################################################################################
# Security
################################################################################
set autologin off
set echo off
set binary off
set line on
set escape off
set flush off

################################################################################
# Connection
################################################################################
set timeout 30

################################################################################
# Terminal
################################################################################
set term vt100
set window 80 24
set termcap on
set speed 9600

################################################################################
# Input/Output
################################################################################
set localecho on
set inputmode char
set crlf off
set case on
