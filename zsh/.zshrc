#!/usr/bin/env bash

################################################################################
# Aliases
################################################################################
source ~/.dotfiles/zsh/aliases

################################################################################
# Functions
################################################################################
source ~/.dotfiles/zsh/functions

################################################################################
# Paths
################################################################################
source ~/.dotfiles/zsh/paths

################################################################################
# Settings
################################################################################
source ~/.dotfiles/zsh/settings

################################################################################
# Containers
################################################################################
source ~/.dotfiles/zsh/containers

################################################################################
# Tmux
################################################################################
if [ -z "$TMUX" ]; then
  tmux new-session -s $$;
else
  case "$(uname -m)" in
    "x86_64" | "arm64")
      export TERM="screen-256color"

      ;;
    "Power Macintosh")
      export TERM="xterm-color"

      ;;
  esac
fi

source $ZSH/oh-my-zsh.sh
