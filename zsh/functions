################################################################################
# Redis
################################################################################
function redis-init() {
  docker run \
    --detach \
    --hostname redis \
    --name redis \
    --restart unless-stopped \
    --publish 127.0.0.1:6379:6379 \
    redis:6-alpine
}

function redis-start() {
  docker run redis
}

function redis-stop() {
  docker stop redis
}

function redis-purge() {
  redis-stop
  docker rm redis
}

function redis-terminal() {
  docker exec -it redis /bin/sh
}
