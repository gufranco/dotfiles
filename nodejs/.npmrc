################################################################################
# Init defaults
################################################################################
init-author-name=Gustavo Franco
init-author-email=gustavocfranco@gmail.com
init-author-url=https://www.github.com/gufranco
init-license=MIT
init-version=0.0.1

################################################################################
# Registry / authentication
################################################################################
registry=https://registry.npmjs.org/
//registry.npmjs.org/:_authToken=${NPM_TOKEN}
//registry.npmjs.org/:always-auth=true

################################################################################
# CLI behavior / UX
################################################################################
update-notifier=false
progress=false
fund=false
audit=false
loglevel=warn

################################################################################
# Network / retries
################################################################################
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

################################################################################
# Security / environment
################################################################################
ignore-scripts=true   # Block postinstall
engine-strict=true    # Block install if Node.js version doesn't match "engines"
